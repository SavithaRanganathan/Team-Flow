<p id="notice"><%= notice %></p>

<h1>Listing Mocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Project</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mocks.each do |mock| %>
      <tr>
        <td><%= mock.name %></td>
        <td><%= mock.description %></td>
        <td><%= mock.url %></td>
        <td><%= mock.project %></td>
        <td><%= mock.requirement %></td>
        <td><%= link_to 'Show', mock %></td>
        <td><%= link_to 'Edit', edit_mock_path(mock) %></td>
        <td><%= link_to 'Destroy', mock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

