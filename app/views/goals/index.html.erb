<p id="notice"><%= notice %></p>

<h1>Listing Goals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pageview</th>
      <th>Newuser</th>
      <th>Bouncerate</th>
      <th>Achieved pageview</th>
      <th>Achieved newuser</th>
      <th>Achieved bouncerate</th>
      <th>Project</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= goal.pageview %></td>
        <td><%= goal.newuser %></td>
        <td><%= goal.bouncerate %></td>
        <td><%= goal.achieved_pageview %></td>
        <td><%= goal.achieved_newuser %></td>
        <td><%= goal.achieved_bouncerate %></td>
        <td><%= goal.project %></td>
        <td><%= goal.requirement %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

